# Cortex Core Environment Configuration

# Application settings
ENVIRONMENT=development  # development, staging, production
DEBUG=true               # Enable debug mode
HOST=0.0.0.0             # Host to bind to
PORT=8000                # Port to bind to
WORKERS=1                # Number of worker processes for production

# Log settings
LOG_LEVEL=INFO           # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json          # json, text
LOG_DIR=./logs           # Directory for log files

# Database settings
DATABASE_URL=sqlite+aiosqlite:///./data/cortex.db
# For PostgreSQL:
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/cortex
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_ECHO=false      # Echo SQL queries (for debugging)

# Redis settings
REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=10
REDIS_MAX_CONNECTIONS=20
REDIS_TIMEOUT=5

# Security settings
SECRET_KEY=your-secret-key-at-least-32-chars-long
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256          # JWT signing algorithm
PASSWORD_RESET_TOKEN_EXPIRE_HOURS=24

# CORS settings
CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]
CORS_HEADERS=["*"]

# Integration settings
OPENAI_API_KEY=          # Only needed if using OpenAI integration
VECTOR_DB_URL=           # URL for vector database
ENABLE_EXTERNAL_SERVICES=false

# Memory settings
MEMORY_BACKEND=sqlite    # sqlite, redis, postgres
MAX_MEMORY_ITEMS=1000    # Maximum number of memory items per workspace
CONTEXT_WINDOW_SIZE=4096 # Maximum tokens in context window

# Feature flags
ENABLE_WHITEBOARD=true
ENABLE_SESSION_CLEANUP=true
ENABLE_AUDIT_LOGGING=true